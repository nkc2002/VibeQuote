# =============================================================================
# VibeQuote Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values

# =============================================================================
# DATABASE
# =============================================================================
# MongoDB connection string
# Get free MongoDB Atlas: https://www.mongodb.com/atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/vibequote?retryWrites=true&w=majority

# =============================================================================
# AUTHENTICATION
# =============================================================================
# JWT secret key for signing tokens (generate a random string, min 32 chars)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters

# =============================================================================
# EXTERNAL APIs
# =============================================================================
# Unsplash API access key for background images
# Get your key: https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=your-unsplash-access-key

# FFmpeg binary URL (for video generation on serverless)
# Leave empty to use local ffmpeg installation
FFMPEG_URL=

# =============================================================================
# URLS
# =============================================================================
# Frontend URL (for CORS and redirects)
CLIENT_URL=http://localhost:5173

# Backend API URL
SERVER_URL=http://localhost:3001

# =============================================================================
# SERVER
# =============================================================================
# Port for Express server
PORT=3001

# Node environment (development | production | test)
NODE_ENV=development

# =============================================================================
# EMAIL (Optional - for password reset)
# =============================================================================
# SMTP settings for sending emails
# Leave empty to use Ethereal (test email service)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# =============================================================================
# AWS S3 (Optional - for video storage)
# =============================================================================
# S3 bucket for storing generated videos
# Leave empty to skip S3 upload
S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
